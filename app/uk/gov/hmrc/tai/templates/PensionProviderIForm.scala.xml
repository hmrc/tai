@(viewmodel: uk.gov.hmrc.tai.model.templates.EmploymentPensionViewModel)
<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format" font-size="11px" font-family="OpenSans">

  <fo:layout-master-set>
    <fo:simple-page-master master-name="main_template" page-height="297mm" page-width="210mm" margin="1in">
      <fo:region-body region-name="xsl-region-body" margin-top="12mm"/>
      <fo:region-before region-name="xsl-region-before" extent="12mm"/>
    </fo:simple-page-master>
  </fo:layout-master-set>

  <fo:page-sequence master-reference="main_template">

    <fo:static-content flow-name="xsl-region-before">
      <fo:block>
        <fo:block font-size="10px">HM Revenue &amp; Customs</fo:block>
        <fo:block font-size="10px" color="grey">Internal HMRC Copy</fo:block>
      </fo:block>
    </fo:static-content>

    <fo:flow flow-name="xsl-region-body">

      <fo:block font-size="14px" font-family="OpenSansBold" margin-bottom="4mm">Tell us about income from employment or pension</fo:block>
      <fo:block font-size="13px" font-family="OpenSansBold" margin-bottom="4mm">Internal Information</fo:block>
      <fo:block font-size="12px" font-family="OpenSansBold" margin-bottom="0mm">Summary</fo:block>

      <fo:block margin-bottom="5mm">
        <fo:block font-size="11px" font-family="OpenSansBold" margin-bottom="3mm">Tell us what tax year your query is about</fo:block>
        <fo:block>
          <fo:table display-align="center" table-layout="fixed" border-collapse="separate" border-separation="2mm">
            <fo:table-column column-width="65mm"/>
            <fo:table-column column-width="80mm"/>
            <fo:table-body>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Which tax year is your query about?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.taxYearRange
                </fo:block></fo:table-cell>
              </fo:table-row>
            </fo:table-body>
          </fo:table>
        </fo:block>
      </fo:block>

      <fo:block margin-bottom="5mm">
        <fo:block font-size="11px" font-family="OpenSansBold" margin-bottom="3mm">Your details</fo:block>
        <fo:block>
          <fo:table display-align="center" table-layout="fixed" border-collapse="separate" border-separation="2mm">
            <fo:table-column column-width="65mm"/>
            <fo:table-column column-width="80mm"/>
            <fo:table-body>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  National Insurance number
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.nino
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  First name
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.firstName
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Last name
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.lastName
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Date of birth
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block margin-right="20mm">
                  @viewmodel.dateOfBirth
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Can we contact you by telephone?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.telephoneContactAllowed
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Telephone number
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.telephoneNumber
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Is your address in the UK?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  Yes
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm" >
                  UK address
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  <fo:block>@viewmodel.addressLine1</fo:block>
                  <fo:block>@viewmodel.addressLine2</fo:block>
                  <fo:block>@viewmodel.addressLine3</fo:block>
                  <fo:block>@viewmodel.postcode</fo:block>
                </fo:block></fo:table-cell>
              </fo:table-row>
            </fo:table-body>
          </fo:table>
        </fo:block>
      </fo:block>

      <fo:block margin-bottom="5mm">
        <fo:block font-size="11px" font-family="OpenSansBold" margin-bottom="3mm">What do you want to tell us?</fo:block>
        <fo:block>
          <fo:table display-align="center" table-layout="fixed" border-collapse="separate" border-separation="2mm">
            <fo:table-column column-width="110mm"/>
            <fo:table-column column-width="35mm"/>
            <fo:table-body>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Do you have an employment or pension that is incorrect?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.isUpdate
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Do you have an employment or pension that is missing?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.isAdd
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Do you have an employment or pension that has ended?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.isEnd
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Is your employment or pension missing?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  My pension is missing
                </fo:block></fo:table-cell>
              </fo:table-row>
            </fo:table-body>
          </fo:table>
        </fo:block>
      </fo:block>

      <fo:block margin-bottom="5mm">
        <fo:block font-size="11px" font-family="OpenSansBold" margin-bottom="3mm">Pension details</fo:block>
        <fo:block>
          <fo:table display-align="center" table-layout="fixed" border-collapse="separate" border-separation="2mm">
            <fo:table-column column-width="65mm"/>
            <fo:table-column column-width="80mm"/>
            <fo:table-body>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Pension provider's name
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.employmentPensionName
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Do you know your pension number?
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.payrollNumber
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  First date you were paid
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  @viewmodel.startDate
                </fo:block></fo:table-cell>
              </fo:table-row>
              <fo:table-row>
                <fo:table-cell><fo:block margin-right="5mm">
                  Tell us what is incorrect and why:
                </fo:block></fo:table-cell>
                <fo:table-cell><fo:block>
                  I want to add a pension provider for which I got first payment on @viewmodel.startDate
                </fo:block></fo:table-cell>
              </fo:table-row>
            </fo:table-body>
          </fo:table>
        </fo:block>
      </fo:block>
    </fo:flow>
  </fo:page-sequence>
</fo:root>
